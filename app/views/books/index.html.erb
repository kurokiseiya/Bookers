<body>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  
  <h2>New book</h2>
  <% if flash[:error_messages] %>
    <div id="error_explanation">
      <h2>2 errors prohibited this book from being saved:</h2>
      <ul>
        <% flash[:error_messages].each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form">
  <%= form_with model:@book, local:true do |f| %>
  
  <div class="form-input">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-input">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="form-btn">
  <%= f.submit "Create Book" %>
  </div>
  
  <% end %>
</div>
</body>