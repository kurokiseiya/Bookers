<h1>Editing Book</h1>
 <% if flash[:error_messages] %>
    <div id="error_explanation">
        <h2>error prohibited this book from being saved:</h2>
      <ul>
        <% flash[:error_messages].each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="form">
  <%= form_with model: @book do |f| %>
    <div class="form-input">
      <label>Title</label>
      <%= f.text_field :title %>
      
      <label>Body</label>
      <%= f.text_area :body %>
    <div class="form-btn">
      <%= f.submit "Update Book" %>
    </div>
    </div>
  <% end %>
</div>
<div class="change">
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</div>